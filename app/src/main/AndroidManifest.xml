<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alayb.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".DashboardActivity"
            android:windowSoftInputMode="stateHidden"
            ></activity>
        <activity android:name=".Signup" />
        <activity android:name=".EditProfile"/>
        <activity android:name=".ProductDetails"/>
        <activity android:name=".ForgotActivity"/>
        <activity android:name=".PasswordChange"/>
        <activity android:name=".CartActivity"/>
        <activity android:name=".SearchActivity"/>
        <activity android:name=".ReviewActivity"/>
        <activity android:name=".SubCatActivity"/>
        <activity android:name=".ProductListActivity" />
    </application>

</manifest>