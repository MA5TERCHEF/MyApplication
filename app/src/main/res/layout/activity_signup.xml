<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_universal"
    tools:context="com.example.alayb.myapplication.Signup">


    <android.support.v7.widget.Toolbar
        android:background="#007EC2"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/toolbarsignup"
        android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:text="Signup"
                android:layout_centerHorizontal="true"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <EditText
        style="@style/alledittext"
        android:layout_marginTop="20dp"
        android:id="@+id/fname"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbarsignup"
        android:backgroundTint="#0b98e4"
        android:hint="First Name"
        android:textSize="20dp" />

    <EditText
        style="@style/alledittext"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0b98e4"
        android:layout_below="@+id/fname"
        android:id="@+id/lname"
        android:hint="Last Name"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300sp"
        android:layout_height="wrap_content" />

    <EditText
        style="@style/alledittext"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0b98e4"
        android:layout_below="@+id/lname"
        android:id="@+id/email"
        android:hint="Email"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300sp"
        android:layout_height="wrap_content" />

    <EditText
        style="@style/alledittext"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0b98e4"
        android:layout_below="@+id/email"
        android:id="@+id/pass"
        android:hint="Password"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300sp"
        android:layout_height="wrap_content" />

    <EditText
        style="@style/alledittext"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0b98e4"
        android:layout_below="@+id/pass"
        android:id="@+id/repass"
        android:hint="Re Enter Password"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300sp"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="40dp"
        style="@style/btn"
        android:layout_below="@+id/repass"
        android:id="@+id/btnsignup"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Submit"/>
    <TextView
        android:id="@+id/backtologin"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnsignup"
        android:textColor="#0B98E4"
        android:text="Have an Account? Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>
