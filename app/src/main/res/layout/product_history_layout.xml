<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#0997e4"
        android:elevation="20dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="10dp"

            android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/history_img"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/history_img"
        android:id="@+id/history_name"
        android:layout_marginTop="15dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/history_catname"
                android:text="Category:"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:textColor="#000"
                android:layout_toRightOf="@id/history_img"
                android:layout_below="@id/history_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:textColor="#000"
        android:layout_toRightOf="@id/history_catname"
        android:layout_below="@id/history_name"
        android:id="@+id/history_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000"
        android:textSize="15dp"
        android:id="@+id/history_product"
        android:text="Product Page"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000"
        android:text="Submit A Review"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/history_product"
        android:layout_alignParentEnd="true"
        android:id="@+id/history_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout></android.support.v7.widget.CardView>


</RelativeLayout>