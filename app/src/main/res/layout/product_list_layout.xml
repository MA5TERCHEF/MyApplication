<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp">
    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#0997e4"
        android:elevation="20dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/product_list_img"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:id="@+id/product_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/product_list_img"
        android:textSize="20dp" />
    <TextView
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/product_list_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/product_list_img"
        android:layout_below="@id/product_list_name"/>
    <RatingBar
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        android:isIndicator="true"
        android:id="@+id/product_list_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_below="@id/product_list_img"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>