<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background_universal"

    tools:context="com.example.alayb.myapplication.MainActivity">

    <ImageView
        android:src="@drawable/ic_blue_computer_icon"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="100dp"
        android:text="Pc Store"
        android:textColor="#0b98e4"
        android:textSize="40dp" />
    <EditText
        style="@style/alledittext"
        android:backgroundTint="#0b98e4"
        android:id="@+id/Edt1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:hint="Enter ID"
        android:textColorHint="#74000000" />

    <EditText
        style="@style/alledittext"
        android:backgroundTint="#0b98e4"
        android:id="@+id/Edt2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Edt1"
        android:layout_centerInParent="true"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColorHint="#74000000" />
    <CheckBox
        android:buttonTint="#0B98E4"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@id/Edt2"
        android:id="@+id/checked"
        android:layout_below="@id/Edt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remain Logged in?"/>
    <Button
        android:layout_marginTop="@dimen/fab_margin"
        style="@style/btn"
        android:id="@+id/btn1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checked"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textColor="#ffffff"/>
    <Button
        style="@style/btn"
        android:layout_marginTop="@dimen/fab_margin"
        android:id="@+id/btn2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:layout_centerInParent="true"
        android:text="Signup"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/forgot"
        android:textColor="#0b98e4"
        android:layout_centerHorizontal="true"
        android:text="Forgot Password?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn2"/>


</RelativeLayout>