<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_universal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#0997e4"
        android:elevation="20dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/search_result_image"
        android:layout_width="100sp"
        android:layout_height="100sp" />

    <TextView
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:id="@+id/search_result_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/search_result_image"
        android:hint="name" />

    <TextView
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:hint="amt"
        android:layout_toEndOf="@id/search_result_image"
        android:layout_below="@id/search_result_name"
        android:id="@+id/search_result_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/search_result_categoryname"
                android:layout_below="@id/search_result_price"
                android:text="Category:"
                android:layout_marginEnd="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/search_result_price"
                android:hint="category"
                android:id="@+id/search_result_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>