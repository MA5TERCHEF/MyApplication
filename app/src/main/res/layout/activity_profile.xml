<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:background="@drawable/background_universal"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/profile_head"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/profile_image"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/edt_profile"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_above="@+id/profile_username"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="-29dp"
            android:layout_toEndOf="@+id/profile_username"
            android:src="@drawable/ic_edit_black_24dp" />

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:hint="username"
            android:textSize="25sp" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:id="@+id/profile_fnametext"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_head"
        android:text="First Name:"
        android:textSize="18sp"
        />
    <TextView
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/background_universal"
        android:hint="fname"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/profile_head"
        android:id="@+id/profile_fname"
        android:layout_width="190dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:text="Last Name:"
        android:textSize="18sp"
        android:layout_below="@id/profile_fname"
        android:id="@+id/profile_lnametext"
        android:layout_width="190dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/background_universal"
        android:hint="lname"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/profile_fname"
        android:id="@+id/profile_lname"
        android:layout_width="190dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:text="Email:"
        android:textSize="18sp"
        android:layout_below="@id/profile_lname"
        android:id="@+id/profile_emailtext"
        android:layout_width="190dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/background_universal"
        android:hint="email"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/profile_lname"
        android:id="@+id/profile_email"
        android:layout_width="190dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:text="Phone:"
        android:textSize="18sp"
        android:layout_below="@id/profile_email"
        android:id="@+id/profile_phonetext"
        android:layout_width="190dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/background_universal"
        android:hint="Phone"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/profile_email"
        android:id="@+id/profile_phone"
        android:layout_width="190dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:text="Add Line 1:"
        android:textSize="18sp"
        android:layout_below="@id/profile_phone"
        android:id="@+id/profile_add1text"
        android:layout_width="190dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/background_universal"
        android:hint="Address1"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/profile_phone"
        android:id="@+id/profile_add1"
        android:layout_width="190dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:text="Add Line 2:"
        android:textSize="18sp"
        android:layout_below="@id/profile_add1"
        android:id="@+id/profile_add2text"
        android:layout_width="190dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/background_universal"
        android:hint="Address2"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/profile_add1"
        android:id="@+id/profile_add2"
        android:layout_width="190dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="20sp"
        android:id="@+id/edt_password"
        android:text="change password"
        style="@style/btn"
        android:layout_centerHorizontal="true"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_add2"
        />

</RelativeLayout>
